<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <!-- bt1 居中显示-->
    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="按钮1"/>

    <!-- bt2 右边缘与bt1的左边缘对齐，底部与bt1的顶部对齐 -->
    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/bt1"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        android:text="按钮2"/>

    <!-- bt3 左边缘与bt1的右边缘对齐，底部与bt1的顶部对齐 -->
    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/bt1"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        android:text="按钮3"/>

    <!-- bt4 右边缘与bt1的左边缘对齐，顶部与bt1的底部对齐 -->
    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/bt1"
        app:layout_constraintTop_toBottomOf="@+id/bt1"
        android:text="按钮4"/>

    <!-- bt5 左边缘与bt1的右边缘对齐，顶部与bt1的底部对齐 -->
    <Button
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/bt1"
        app:layout_constraintTop_toBottomOf="@+id/bt1"
        android:text="按钮5"/>
</android.support.constraint.ConstraintLayout>